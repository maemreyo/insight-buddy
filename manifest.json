{
  "manifest_version": 3,
  "name": "Insight Buddy - AI Reading Assistant",
  "version": "1.0.0",
  "description": "Your intelligent reading companion that helps analyze, understand and think critically about any text content",

  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "sidePanel",
    "scripting",
    "tabs"
  ],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "src/background/index.ts"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/contents/insight-detector.ts"],
      "css": ["src/styles/insight-buddy.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/popup.tsx",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },

  "side_panel": {
    "default_path": "src/sidepanel.tsx"
  },

  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "commands": {
    "analyze-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Analyze selected text"
    },
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle sidebar"
    },
    "quick-questions": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Quick critical questions"
    }
  }
}
